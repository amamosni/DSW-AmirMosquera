def ciclo():
    vieja_moneda = "Amir"
    while True:
        numeros = ['ROSEUSDT', 'RSRUSDT']
        symbol = random.choice(numeros)
        
        while vieja_moneda == symbol:
            symbol = random.choice(symbol)
        print("Moneda nueva: "+symbol)
        print("Moneda vieja: "+vieja_moneda)
        sleep(3)
        vieja_moneda = symbol


